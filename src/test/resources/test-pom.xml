<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.test</groupId>
    <artifactId>test-project</artifactId>
    <version>bmc_local</version>
    <properties>
        <custom.test.prop1>I_AM_A_CUSTOM_PROP</custom.test.prop1>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>bmc.dev.resources.code</groupId>
                <artifactId>bmc-resources</artifactId>
                <version>bmc_local</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-architecture</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <general>
                        <skip>false</skip>
                    </general>
                    <architecture>
                        <mainReadme/>
                        <model>clean_ddd_hexa</model>
                        <skip>false</skip>
                        <skipReadme>false</skipReadme>
                    </architecture>
                    <resources>
                        <skip>false</skip>
                        <overwriteUserResources>false</overwriteUserResources>
                    </resources>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
